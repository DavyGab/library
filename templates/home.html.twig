{% extends 'base.html.twig' %}

{% set menu = 'home' %}

{% block body %}
    <h1>Liste des livres</h1>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for book in books %}
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="{{ asset('uploads/images/' ~ book.coverPicture) }}" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">{{ book.title }}</p>
                                <p class="card-text">Auteur : {{ book.author }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('book_edit', {'id': book.id}) }}" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
